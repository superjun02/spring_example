<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.example.lesson04.dao.NewUserDAO">
	<select id="insertNewUser" parameterType="com.example.lesson04.model.NewUser">
		INSERT INTO `new_user`
		(
			`name`
			,`yyyymmdd`
			,`introduce`
			,`email`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{name}
			, #{yyyymmdd}
			, #{introduce}
			, #{email}
			, NOW()
			, NOW()
		)
	</select>
	
	<select id="selectLastNewUser" resultType="com.example.lesson04.model.NewUser">
		SELECT
			`id`
			,`name`
			,`yyyymmdd`
			,`introduce`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`new_user`
		ORDER BY `id` DESC
		LIMIT 1
	</select>
	
	<select id="existNewUserByName" parameterType="string" resultType="boolean">
		SELECT
			count(*)
		FROM
			`new_user`
		WHERE
			`name` = #{name}
	</select>
</mapper>